# ------------------BEGIN-----------------------
# os-specific
if [[ -e /etc/os-release ]];
then
    os=$(cat /etc/os-release | grep '^ID=' | cut -c4- | tr '[:upper:]' '[:lower:]')
    if [ -n "$os" ];then
        case "$os" in
            "arch")
                alias syslog='sudo journalctl -r'
                alias logmonitor='sudo journalctl -f'
                ;;
            "manjaro")
                alias syslog='sudo journalctl -r'
                alias logmonitor='sudo journalctl -f'
                ;;
            "ubuntu"|"elementary")
                alias syslog='sudo less /var/log/syslog'
                alias logmonitor='sudo tail -f /var/log/syslog'
                ;;
            *)
                ;;
        esac
    fi
fi

