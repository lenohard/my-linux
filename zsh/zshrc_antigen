ctrlp() {
    dir="$(find -type d | grep -v .git | grep -v node_modules | fzf)";
    [[ -d "$dir" ]] && cd $dir;
    zle reset-prompt  
}

zle -N ctrlp
bindkey ",cd" ctrlp


ctrlp2() {
    dir="$(fzf)";
    LBUFFER="${LBUFFER} $dir "
    zle reset-prompt  
}
zle -N ctrlp2
bindkey ",j" ctrlp2

alias pac="pacman -Slq | fzf --multi --preview 'pacman -Si {1}' | xargs -ro sudo pacman -S"
