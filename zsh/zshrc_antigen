# ------------------BEGIN------------------------------
#  ==>  current editor buffer tricks
copy2x(){
    echo "$BUFFER" | xclip -selection clipboard
}
zle -N copy2x
bindkey ",p" copy2x


output2x() {
    LBUFFER="${LBUFFER} | tee /dev/tty | xclip -selection clipboard"
    zle reset-prompt  
}
zle -N output2x
bindkey ",pp" output2x

