# eval-memoi caches the command in redis
rclonef () {
    local paths=("${(@f)$(memoi_expire=${rfExpire:-$((3600*24))} eval-memoi rclone lsf --recursive "${1}:" | fzf)}")
    local i
    for i in $paths[@]
    do
        rclone copy "${1}:$i" "$2"
    done
}

